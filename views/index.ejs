<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=320, initial-scale=1, maximum-scale=1, user-scale=false">
        <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <script src="javascripts/angular.min.js"></script>
        <script src="javascripts/app.js"></script>
    </head>
    <body ng-app="MyApp">
        <div ng-controller="dialPadController" >
            <div class="leftContainer">
                <div class="display" disabled>{{output.sentence}} {{output.word}}<span id="typed-cursor" class="blinking">|</span></div>
                <button ng-repeat="dial in dialPadMap" class="dialPadNumber" ng-click="dial.click(pad)">
                    <span style="font-size: 26px; color: #363636;">{{dial.number}}</span><br><span style="color: #444444;">{{dial.letters}}</span>
                </button>
            </div>
            <div class="rightContainer">
                Input: <input type="text" ng-model="pad.number" ng-change="update(pad)" style="font-size: 16px; padding: 5px; color: #2C2C2C;" /><br />
                <h2>Word Combinations</h2>
                <ul ng-repeat="word in output.words">
                    <li>{{word}}</li>
                </ul>
            </div>
        </div>
    </body>
</html>
